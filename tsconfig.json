{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2017"
        ],
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "data/*",
                "node_modules/*",
                "src/types/*"
            ]
        },
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        ".npm"
    ],
    "include": [
        "src/*",
        "index.ts"
    ]
}